        <TextView
            android:id="@+id/F_V_main_with_tx"
            android:layout_width="305dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/l_f_round_adg_purple"
            android:elevation="30dp"
            android:fontFamily="@font/l_f_binggraebold"
            android:gravity="center"

            android:text="같이묵자"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:transitionName="L_V_with_txTransition" />
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="15sp"
        app:backgroundTint="#9370db"
        android:src="@drawable/l_f_icon_add"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="90dp"
        android:layout_marginRight="15sp"
        android:src="@drawable/l_f_icon_user"
        android:visibility="invisible"
        app:backgroundTint="#FFFFFF"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp" />
    <!-- pressedTranslationZ:버튼클릭시 그림자 범위
        elevation:액티비티 바닥부터 버튼까지의 높이
         visibility:뷰의 가시성 상태 부여(visible:화면에 보이는상태
                invisible : 화면엔 안보이지만 레이아웃 자리는 차지하고 있는 상태
                 gone : 완전히 숨겨진 상태-->


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="165dp"
        android:layout_marginRight="15sp"
        android:src="@drawable/l_f_icon_settings"
        android:visibility="invisible"
        app:backgroundTint="#FFFFFF"
        app:elevation="12dp"
        app:pressedTranslationZ="12dp"/>
